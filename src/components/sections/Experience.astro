---
import Section from "../Section.astro"

import { work } from "@cv"
import { monthYear } from "@/utils/utils.ts"
---

<Section title="Work Experience">
  <ul>
    {
      work.map(
        ({ name, startDate, endDate, position, summary, url }) => {
          const date = monthYear(startDate, endDate)
          
          return (
            <li>
              <article>
                <header>
                  <div>
                    <h3>
                      <a class ="link-work" href={url} target="_blank">{name}</a>
                    </h3>
                    <h4>{position}</h4>
                  </div>

                  <time>{date}</time>
                </header>

                <footer>
                  <p>{summary}</p>
                </footer>
              </article>
            </li>
          )
        }
      )
    }
  </ul>
</Section>

<style>
  ul {
    display: flex;
    flex-direction: column;
    gap: 32px;
  }

  article h3, .link-work {
    font-weight: 500;
    color: #111;
    margin-bottom: 4px;
  }

  .link-work:hover {
    text-decoration: underline;
  }

  article h4 {
    color: #222;
    font-weight: 400;
  }

  header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 4px;
  }

  time {
    color: #555;
    font-size: 0.85rem;
  }
</style>
